{
  "name": "ui",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "prepare": "husky install",
    "dev": "vite",
    "build": "vue-tsc --noEmit && vite build",
    "preview": "vite preview",
    "lint": "eslint ui --fix",
    "format": "prettier --write \"**/*.{js,ts,vue,json,css,scss,md}\"",
    "format:check": "vue-tsc --noEmit && prettier --check \"**/*.{js,ts,vue,json,css,scss,md}\"",
    "lint-format": "vue-tsc --noEmit && eslint ui --fix && prettier --write \"**/*.{js,ts,vue,json,css,scss,md}\" && knip && GRADLE_OPTS='--enable-native-access=ALL-UNNAMED' ./gradlew ktlintFormat detekt",
    "ktlint": "./gradlew ktlintCheck",
    "ktlint:fix": "./gradlew ktlintFormat",
    "detekt": "./gradlew detekt",
    "check-unused": "knip",
    "check-unused:fix": "knip --fix",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:coverage:intellij": "vitest run --coverage --exclude='**/confirm-dialog.test.ts' && chmod +x fix-coverage.sh && ./fix-coverage.sh"
  },
  "lint-staged": {
    "**/*.{js,ts,vue}": [
      "eslint --fix",
      "prettier --write"
    ],
    "**/*.{json,css,scss,md}": [
      "prettier --write"
    ],
    "**/*.{kt,kts}": [
      "GRADLE_OPTS='--enable-native-access=ALL-UNNAMED' ./gradlew ktlintFormat detekt"
    ]
  },
  "dependencies": {
    "@tanstack/vue-query": "^5.90.5",
    "@vueuse/core": "^13.9.0",
    "axios": "^1.12.2",
    "bootstrap": "^5.3.8",
    "chart.js": "^4.5.1",
    "lucide-vue-next": "^0.546.0",
    "vue": "^3.5.22",
    "vue-chartjs": "^5.3.2",
    "vue-router": "^4.6.3",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@testing-library/vue": "^8.1.0",
    "@types/bootstrap": "^5.2.10",
    "@types/node": "^24.8.1",
    "@typescript-eslint/eslint-plugin": "^8.46.1",
    "@typescript-eslint/parser": "^8.46.2",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.3",
    "@vue/test-utils": "^2.4.6",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-no-comments": "^1.1.10",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-unused-imports": "^4.2.0",
    "eslint-plugin-vue": "^10.5.1",
    "happy-dom": "^20.0.5",
    "husky": "^9.1.7",
    "knip": "^5.66.0",
    "lint-staged": "^16.2.5",
    "prettier": "^3.6.2",
    "sass": "1.70.0",
    "typescript": "5.9.3",
    "vite": "^7.1.10",
    "vitest": "^3.2.3",
    "vue-tsc": "^3.1.1"
  }
}
