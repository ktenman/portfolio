{
  "name": "ui",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc --noEmit && vite build",
    "preview": "vite preview",
    "lint": "eslint ui --fix",
    "format": "prettier --write \"**/*.{js,ts,vue,json,css,scss,md}\"",
    "format:check": "vue-tsc --noEmit && prettier --check \"**/*.{js,ts,vue,json,css,scss,md}\"",
    "lint-format": "vue-tsc --noEmit && eslint ui --fix && prettier --write \"**/*.{js,ts,vue,json,css,scss,md}\" && knip && ./gradlew ktlintFormat",
    "ktlint": "./gradlew ktlintCheck",
    "ktlint:fix": "./gradlew ktlintFormat",
    "check-unused": "knip",
    "check-unused:fix": "knip --fix",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:coverage:intellij": "vitest run --coverage --exclude='**/confirm-dialog.test.ts' && chmod +x fix-coverage.sh && ./fix-coverage.sh"
  },
  "dependencies": {
    "@tanstack/vue-query": "^5.81.2",
    "@vueuse/core": "^13.4.0",
    "axios": "^1.10.0",
    "bootstrap": "^5.3.7",
    "chart.js": "^4.5.0",
    "vue": "^3.5.17",
    "vue-chartjs": "^5.3.2",
    "vue-router": "^4.5.1",
    "vue-toastification": "^2.0.0-rc.5",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@testing-library/vue": "^8.1.0",
    "@types/bootstrap": "^5.2.10",
    "@types/node": "^24.0.4",
    "@typescript-eslint/eslint-plugin": "^8.35.0",
    "@typescript-eslint/parser": "^8.34.1",
    "@vitejs/plugin-vue": "^5.2.3",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.3",
    "@vue/test-utils": "^2.4.6",
    "eslint": "^9.29.0",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-no-comments": "^1.1.10",
    "eslint-plugin-prettier": "^5.5.0",
    "eslint-plugin-unused-imports": "^4.1.4",
    "eslint-plugin-vue": "^10.2.0",
    "happy-dom": "^18.0.1",
    "knip": "^5.61.2",
    "prettier": "^3.6.1",
    "sass": "1.70.0",
    "typescript": "5.8.3",
    "vite": "^6.3.5",
    "vitest": "^3.2.3",
    "vue-tsc": "^2.2.10"
  }
}
