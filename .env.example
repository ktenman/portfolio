# Database Configuration
POSTGRES_VERSION=17-alpine
POSTGRES_DB=portfolio
POSTGRES_USER=postgres
POSTGRES_PASSWORD=changeme
POSTGRES_PORT=5432

# Redis Configuration
REDIS_VERSION=8-alpine
REDIS_PORT=6379

# Service Ports
BACKEND_PORT=8080
AUTH_PORT=8083
FRONTEND_DEV_PORT=61234
CADDY_HTTP_PORT=80
CADDY_HTTPS_PORT=443

# OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id-here
GOOGLE_CLIENT_SECRET=your-google-client-secret-here
GITHUB_CLIENT_ID=your-github-client-id-here
GITHUB_CLIENT_SECRET=your-github-client-secret-here

# Access Control
ALLOWED_EMAILS=your-email@gmail.com,another-email@gmail.com
ALLOWED_LOGINS=your-github-username
REDIRECT_URI=http://localhost/

# API Keys
VISION_BASE64_ENCODED_KEY=your-base64-encoded-key
TELEGRAM_BOT_TOKEN=your-telegram-bot-token

# Application Settings
SPRING_PROFILES_ACTIVE=default
SCHEDULING_ENABLED=true
FLYWAY_ENABLED=true
VISION_ENABLED=false
TELEGRAM_BOT_ENABLED=false

# Build Info
BUILD_HASH=local
BUILD_TIME=local

# Docker Settings
RESTART_POLICY=no
DEPENDS_CONDITION=service_started
HEALTHCHECK_INTERVAL=3s
HEALTHCHECK_TIMEOUT=1s
HEALTHCHECK_RETRIES=5

# Image Configuration (for production)
BACKEND_IMAGE=ktenman/portfolio-be:latest
FRONTEND_IMAGE=ktenman/portfolio-fe:latest
AUTH_IMAGE=ktenman/auth:latest
TRACKER_IMAGE=ktenman/market-price-tracker:latest
CAPTCHA_IMAGE=ktenman/captcha-solver:latest

# Build Context (for development)
BACKEND_BUILD_CONTEXT=.
BACKEND_DOCKERFILE=src/Dockerfile
FRONTEND_BUILD_CONTEXT=.
FRONTEND_DOCKERFILE=ui/Dockerfile
AUTH_BUILD_CONTEXT=../auth
TRACKER_BUILD_CONTEXT=./market-price-tracker

# Container Names
POSTGRES_CONTAINER_NAME=portfolio-postgres
REDIS_CONTAINER_NAME=portfolio-redis
BACKEND_CONTAINER_NAME=portfolio-backend
FRONTEND_CONTAINER_NAME=portfolio-frontend
AUTH_CONTAINER_NAME=portfolio-auth
CADDY_CONTAINER_NAME=portfolio-caddy
TRACKER_CONTAINER_NAME=market_price_tracker

# Additional Settings
SERVER_PORT=8080
BACKEND_MEM_LIMIT=2048m
NODE_VERSION=23.5.0-alpine
CADDY_VERSION=2.8.4-alpine
FETCH_INTERVAL=180
HEALTHCHECK_URL=https://your-healthcheck-url.com
TORRENTS_PATH=/srv/torrents