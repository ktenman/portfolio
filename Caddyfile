# Redirect all HTTP traffic to HTTPS
www.fov.ee {
    redir https://fov.ee{uri}
}

fov.ee {
    encode gzip

    # Cache configuration for general routes
    @cacheable {
        not path /login /login/* /oauth2/* /logout /validate /validate/*
    }
    handle @cacheable {
        cache {
            default_max_age 300  # Cache for 300 seconds (5 minutes)
        }
        reverse_proxy frontend:80
    }

    # Cache configuration for the /validate endpoint
    @cache_validate {
        path /validate /validate/*
    }
    handle @cache_validate {
        cache {
            default_max_age 60  # Cache for 60 seconds (1 minute)
        }
        reverse_proxy auth:8083
    }

    # Login and OAuth routes are handled by the auth server
    @auth_routes {
        path /login /login/* /oauth2/* /logout
    }
    handle @auth_routes {
        reverse_proxy auth:8083
    }

    # For all other routes, use authentication
    @protected {
        not path /login /login/* /oauth2/* /logout
    }
    handle @protected {
        forward_auth auth:8083 {
            uri /validate
            copy_headers X-User-Id
        }

        # API routes
        @api {
            path /api/*
        }
        handle @api {
            reverse_proxy backend:8080
        }

        # All other routes go to the frontend
        handle {
            reverse_proxy frontend:80
        }
    }
}
